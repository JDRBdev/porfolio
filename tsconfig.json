{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@atoms/*": ["components/atoms/*"],
      "@molecules/*": ["components/molecules/*"],
      "@organisms/*": ["components/organisms/*"],
      "@icons/*": ["components/atoms/icons/*"],
      "@layouts/*": ["layouts/*"],
      "@styles/*": ["styles/*"],
      "@i18n/*": ["i18n/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"]
    }
  }
}
