---
import "../../styles/global.css";
import Layout from "../../layouts/Layout.astro";
import { Navbar } from "../../components/organism/navbar";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import Header from "../../components/components/header.astro";
import TechStack from "../../components/components/tech-stack.astro";
import Experience from "../../components/components/experience.astro";
import Projects from "../../components/components/projects.astro";
import Footer from "../../components/components/footer.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  className="onest-regular flex flex-col w-full h-fit mx-auto max-w-9xl onHover items-center overflow-x-hidden"
  client:load
>
  <Navbar client:only />
  <section class="mt-[150px] justify-items-center px-10 flex flex-col mx-auto w-full">
    <Header />
  </section>
    <TechStack client:load />
  <section class="mt-[150px] justify-items-center px-10 flex flex-col mx-auto w-full">
    <Experience />
    <Projects/>
  </section>
  <Footer/>
</Layout>
