---
import "@styles/global.css";
import Layout from "@layouts/Layout.astro";
import { Navbar } from "@components/organism/navbar";
import { getLangFromUrl, useTranslations } from "@i18n/utils";
import Footer from "@components/components/footer.astro";
import TerminosCondicionesContent from "@components/components/terminos-condiciones-content.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  className="onest-regular flex flex-col w-full h-fit mx-auto max-w-9xl onHover items-center overflow-x-hidden"
>
  <Navbar client:only />
  <main class="mt-[150px] justify-items-center max-w-[1512px] px-10 min-h-[72vh]">
    <TerminosCondicionesContent/>
  </main>
  <Footer style="position: fixed; bottom: 0; left: 0; width: 100%;" />
</Layout>
