---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import SectionLayout from "../atoms/section-layout.astro";
import { Matter } from "../atoms/text/matter";
import TypewriterText from "../atoms/type-writer-text";
import Image from "astro/components/Image.astro";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<SectionLayout className="flex flex-col lg:flex-row justify-center max-w-[1512px]">
    <div class="w-full flex justify-center gap-4 max-h-[64px]"> 
        <h1 class="md:text-5xl font-extrabold dark:text-white flex">
            <small class="ms-2 font-semibold text-gray-500 dark:text-gray-400">
                <Matter
                    text={t("header.title")}
                    size="24|32"
                    className="leading-2"
                />
            </small>
        </h1>
        <TypewriterText className="md:min-w-[380px] min-w-[150px] md:leading-6 leading-8" client:load />
    </div>
    <div>
        <Image
            src="/images/imagen-personal.avif"
            alt={t("header.title")}
            width={500}
            height={500}
            class="w-full max-w-[350px]"
            style="mask-image: linear-gradient(black 50%, transparent)",
        />
    </div>
</SectionLayout>

